---
import BaseLayout from '../layouts/BaseLayout.astro';

const posts = [
  {
    title: 'The Dashboard Nobody Uses',
    description: 'Why most analytics projects fail - and what to do instead.',
    date: '2024',
    href: '/writing/dashboard-nobody-uses'
  },
  {
    title: 'Data Infrastructure as Competitive Advantage',
    description: 'The case for investing in boring, reliable systems.',
    date: '2024',
    href: '#',
    coming: true
  },
  {
    title: 'On Technical Debt and Organizational Trust',
    description: 'What your codebase says about your company culture.',
    date: '2024',
    href: '#',
    coming: true
  }
];

const topics = [
  'Data Engineering',
  'Analytics Strategy', 
  'Technical Leadership',
  'System Design',
  'Decision Making'
];
---

<BaseLayout 
  title="Writing" 
  description="Essays on data, technology, and building things that matter."
>
  <section class="py-16 md:py-24">
    <div class="container-narrow">
      <div class="max-w-xl mb-14">
        <h1 class="text-3xl md:text-4xl mb-6">Writing</h1>
        <p class="text-lg leading-relaxed opacity-75">
          Essays on data, technology, and building things that work. 
          Infrequent but considered.
        </p>
      </div>

      <div class="space-y-4 mb-16">
        {posts.map((post) => (
          <a 
            href={post.coming ? undefined : post.href}
            class={"block glass-card p-5 md:p-6 " + (post.coming ? "opacity-40 cursor-default" : "cursor-pointer")}
          >
            <div class="flex items-start justify-between gap-4">
              <div>
                <h2 class="text-base font-serif mb-1.5 text-gold">
                  {post.title}
                  {post.coming && <span class="text-xs opacity-50 ml-2 font-sans normal-case">(coming soon)</span>}
                </h2>
                <p class="opacity-60 text-sm">{post.description}</p>
              </div>
              <span class="text-sm opacity-40 shrink-0">{post.date}</span>
            </div>
          </a>
        ))}
      </div>

      <div>
        <h2 class="text-subhead mb-6">Topics I Write About</h2>
        <div class="flex flex-wrap gap-2">
          {topics.map((topic) => (
            <span class="px-4 py-2 text-sm opacity-70 bg-white/5 border border-white/10 rounded">
              {topic}
            </span>
          ))}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
