---
import BaseLayout from '../layouts/BaseLayout.astro';

const siteLinks = [
  { name: 'About', url: '/about', description: 'Background & philosophy' },
  { name: 'Work', url: '/work', description: 'Projects & expertise' },
  { name: 'Writing', url: '/writing', description: 'Essays & thoughts' }
];

const socialLinks = [
  {
    name: 'LinkedIn',
    url: 'https://www.linkedin.com/in/john-davis-williams/',
    description: 'Professional network',
    icon: '/images/previews/linkedin.svg',
    preview: '/images/previews/linkedin-preview.jpg'
  },
  {
    name: 'GitHub',
    url: 'https://github.com/thejohndwilliams',
    description: 'Code & projects',
    icon: '/images/previews/github.svg',
    preview: '/images/previews/github-preview.jpg'
  },
  {
    name: 'Instagram',
    url: 'https://www.instagram.com/thejohndwilliams/',
    description: 'Visual journal',
    icon: '/images/previews/instagram.svg',
    preview: '/images/previews/instagram-preview.jpg'
  },
  {
    name: 'Behance',
    url: 'https://www.behance.net/killthewizard',
    description: 'Design work',
    icon: '/images/previews/behance.svg',
    preview: '/images/previews/behance-preview.jpg'
  }
];
---

<BaseLayout title="Links | John D. Williams" description="Connect with John D. Williams across platforms.">
  <section class="min-h-screen py-16 md:py-24 flex items-center">
    <div class="max-w-lg mx-auto px-6 w-full">
      
      <div class="text-center mb-14">
        <div class="w-28 h-28 mx-auto mb-8 rounded-full overflow-hidden ring-2 ring-white/10 ring-offset-4 ring-offset-[#0a0a0a]">
          <img src="/images/headshot.jpg" alt="John D. Williams" class="w-full h-full object-cover object-center" />
        </div>
        <h1 class="text-3xl md:text-4xl font-serif mb-3 tracking-tight">John D. Williams</h1>
        <p class="text-xs tracking-[0.25em] uppercase opacity-50 font-light">DATA &middot; DESIGN &middot; DECISIONS</p>
      </div>

      <nav class="space-y-3 mb-10">
        {siteLinks.map((link) => (
          <a 
            href={link.url}
            class="link-card flex justify-between items-center group"
          >
            <div>
              <span class="font-medium text-gold">{link.name}</span>
              <p class="text-sm opacity-50">{link.description}</p>
            </div>
            <span class="opacity-30 group-hover:opacity-60 group-hover:translate-x-1 transition-all">&rarr;</span>
          </a>
        ))}
      </nav>

      <div class="mb-10">
        <p class="text-subhead mb-4">Elsewhere</p>
        <div class="space-y-3">
          {socialLinks.map((link) => (
            <a
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
              class="link-card flex items-center justify-between gap-4 group"
            >
              <div class="flex items-center gap-3 min-w-0">
                <div class="w-10 h-10 rounded-lg overflow-hidden flex-shrink-0 bg-white/5 p-2">
                  <img
                    src={link.icon}
                    alt=""
                    class="w-full h-full object-contain"
                  />
                </div>
                <div class="min-w-0">
                  <span class="font-medium text-gold">{link.name}</span>
                  <p class="text-sm opacity-50 truncate">{link.description}</p>
                </div>
              </div>
              <div class="w-20 h-14 rounded-md overflow-hidden flex-shrink-0 bg-white/5 ring-1 ring-white/10">
                <img
                  src={link.preview}
                  alt={`${link.name} content preview`}
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
              </div>
            </a>
          ))}
        </div>
      </div>

      <div>
        <a 
          href="mailto:hello@thejohndwilliams.com"
          class="btn btn-primary w-full justify-center"
        >
          Get in touch
        </a>
      </div>

      <div class="mt-20 text-center">
        <p class="text-sm opacity-40 italic font-serif">John 15:13</p>
      </div>

    </div>
  </section>
</BaseLayout>
