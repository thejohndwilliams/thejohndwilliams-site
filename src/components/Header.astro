---
import { navItems } from '../utils/date';
---

<header class="py-6 md:py-8">
  <div class="container-narrow">
    <nav class="flex items-center justify-between">
      <a href="/" class="text-xl font-serif tracking-tight hover:opacity-70 transition-opacity text-gold">
        JW
      </a>
      
      <!-- Desktop Navigation -->
      <ul class="hidden md:flex items-center gap-8">
        {navItems.map((item) => (
          <li>
            <a 
              href={item.href}
              class="text-sm opacity-50 hover:opacity-100 transition-opacity"
            >
              {item.name}
            </a>
          </li>
        ))}
      </ul>

      <!-- Mobile Menu Button -->
      <button 
        id="menu-toggle"
        class="md:hidden opacity-50 hover:opacity-100 transition-opacity"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </nav>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden mt-6 pb-4 border-t border-white/10 pt-6">
      <ul class="space-y-4">
        {navItems.map((item) => (
          <li>
            <a 
              href={item.href}
              class="block opacity-60 hover:opacity-100 transition-opacity"
            >
              {item.name}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>
</header>

<script>
  const toggle = document.getElementById('menu-toggle');
  const menu = document.getElementById('mobile-menu');
  
  toggle?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>