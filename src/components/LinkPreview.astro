---
import { fetchLinkMetadata } from '../utils/linkPreview';

interface Props {
  url: string;
}

const { url } = Astro.props;
const metadata = await fetchLinkMetadata(url);

// Truncate description if too long
const maxDescriptionLength = 120;
const truncatedDescription = metadata.description.length > maxDescriptionLength
  ? metadata.description.slice(0, maxDescriptionLength).trim() + 'â€¦'
  : metadata.description;
---

<a
  href={metadata.url}
  target="_blank"
  rel="noopener noreferrer"
  class="link-preview"
>
  {metadata.image && (
    <div class="link-preview-image">
      <img
        src={metadata.image}
        alt=""
        loading="lazy"
        decoding="async"
      />
    </div>
  )}
  <div class="link-preview-content">
    <span class="link-preview-domain">{metadata.domain}</span>
    <h4 class="link-preview-title">{metadata.title}</h4>
    {truncatedDescription && (
      <p class="link-preview-description">{truncatedDescription}</p>
    )}
  </div>
  <span class="link-preview-arrow">&nearr;</span>
</a>

<style>
  .link-preview {
    display: flex;
    align-items: stretch;
    gap: 1rem;
    padding: 1rem;
    background-color: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 0.375rem;
    text-decoration: none;
    transition: all 0.25s ease;
    margin: 1.5rem 0;
  }

  .link-preview:hover {
    background-color: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.1);
  }

  .link-preview-image {
    flex-shrink: 0;
    width: 120px;
    height: 80px;
    border-radius: 0.25rem;
    overflow: hidden;
    background-color: rgba(255, 255, 255, 0.05);
  }

  .link-preview-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .link-preview-content {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 0.25rem;
  }

  .link-preview-domain {
    font-size: 0.75rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: #B8973F;
    font-family: 'Source Sans 3', system-ui, sans-serif;
    font-weight: 500;
  }

  .link-preview-title {
    font-family: 'Source Sans 3', system-ui, sans-serif;
    font-weight: 500;
    font-size: 0.9375rem;
    line-height: 1.4;
    color: #FDFCFA;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .link-preview-description {
    font-size: 0.8125rem;
    line-height: 1.5;
    color: rgba(253, 252, 250, 0.5);
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .link-preview-arrow {
    flex-shrink: 0;
    align-self: center;
    color: rgba(253, 252, 250, 0.3);
    font-size: 1.25rem;
    transition: color 0.25s ease;
  }

  .link-preview:hover .link-preview-arrow {
    color: rgba(253, 252, 250, 0.6);
  }

  /* Responsive adjustments */
  @media (max-width: 480px) {
    .link-preview {
      flex-direction: column;
      gap: 0.75rem;
    }

    .link-preview-image {
      width: 100%;
      height: 140px;
    }

    .link-preview-arrow {
      display: none;
    }
  }
</style>
